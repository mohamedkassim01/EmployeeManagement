@model IEnumerable<Employee>;
@{
    ViewBag.Title = "Employee Index";


}
<div class="card-deck">
    @foreach (var employee in Model)
    {

        string PhotoPath = "~/Images/" + (@employee.PhotoPath ?? "Avatar-512.png");


        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imagethumbnil" src="@PhotoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.ID" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.ID" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>

